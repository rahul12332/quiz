<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <size android:width="100sp" android:height="20sp" />
            <gradient android:angle="90" android:startColor="#ff3300" android:endColor="#ff6600" />
            <corners android:radius="45sp"/>
        </shape>
    </item>

    <!-- Inset -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#cc6600" android:endColor="#cc6600" />
            <corners android:radius="45sp"/>
        </shape>
    </item>

    <!-- Inside border/shadow -->
    <item android:top="15dp" android:left="15dp" android:right="15dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:startColor="#ffcc00" android:endColor="#cc9900" />
            <corners android:radius="45sp"/>
        </shape>
    </item>

    <!-- Main button -->
    <item android:top="16dp" android:left="16dp" android:right="16dp" android:bottom="16dp">
        <shape android:shape="rectangle">
            <corners android:radius="45sp"/>
            <solid android:color="#ff99cc" />
        </shape>
    </item>

    <!-- Button image -->
    <item android:top="70dp" android:left="70dp" android:right="70dp" android:bottom="70dp">
        <shape android:shape="rectangle">
            <solid android:color="#ff6699" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>